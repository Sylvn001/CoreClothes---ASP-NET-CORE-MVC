
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row d-flex align-items-center">
        <form>
            <div class="form-group">
                <label for="productName">Product Name</label>
                <input type="text" class="form-control" id="productName" name="name" placeholder="">
            </div>

            <div class="form-group">
                <label for="productPrice">Product Price</label>
                <input type="text" class="form-control" id="productName" name="price" placeholder="0.0">
            </div>

            <div class="form-group">
                <label for="productStock">Product Name</label>
                <input type="text" class="form-control" id="productStock" name="stock" placeholder="0">
            </div>

            <div class="form-group">
                <label for="productCategory">Select a Category</label>
                <select class="form-control" id="productCategory" name="category">
                    <option value="1">Clothes</option>
                    <option value="2">Shoes</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>

        </form>
    </div>
</div>

