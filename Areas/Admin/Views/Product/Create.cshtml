
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/views/admin/category/create.js"></script>
}

<div class="card">
    <div class="card-header">
        <h3 class="title">New Category</h3>
    </div>
    <div class="card-body">
        <form class="">
            <div class="form-group col-4">
                <label for="productName">Product Name</label>
                <input type="text" class="form-control" id="productName" name="name" placeholder="">
            </div>

            <div class="form-group col-4">
                <label for="productPrice">Product Price</label>
                <input type="text" class="form-control" id="productPrice" name="price" placeholder="0.0">
            </div>

            <div class="form-group col-4">
                <label for="productStock">Product Name</label>
                <input type="text" class="form-control" id="productStock" name="stock" placeholder="0">
            </div>

            <div class="form-group col-4">
                <label for="productCategory">Select a Category</label>
                <select class="form-control" id="productCategory" name="category">
                    <option value="1">Clothes</option>
                    <option value="2">Shoes</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <a class="text-white font-weight-bold" href="~/admin/Product">
            <button type="button" class="btn btn-fill btn-info">CANCEL</button>
        </a>
        <button type="button" onclick="create.save()" class="btn btn-fill btn-primary">Save</button>

    </div>
</div>
